<link rel="stylesheet" href="/assets/css/favorite.css">

<div class="content" alt="" data-aos="fade-right" data-aos-duration="1800">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Daftar Peserta Sayembara</h4>
                        <p class="card-category">Berikut adalah daftar peserta yang mengikuti sayembara :</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        {{#ifCond message '==' 'notfound'}}
                            <p>Belum ada Peserta yang mengikuti Sayembara Anda.</p>
                        {{/ifCond}}
                        {{#if pesertas}}
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Favorite</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Subtopik</th>
                                <th>File Proposal</th>
                            </thead>
                            <tbody>
                            {{#each pesertas as |peserta|}}
                                <tr>
                                    <td>
                                        <!-- kalo  blom dipencet -->
                                        <div class="click">
                                            <span class="fa fa-star-o"></span>
                                            <div class="ring"></div>
                                            <div class="ring2"></div>
                                            <p class="info">Aku suka!</p>
                                        </div>

                                        <!-- kalo udah dipencet -->
                                        <!-- <div class="click active active-2 active-3 active-4">
                                            <span class="fa fa-star"></span>
                                            <div class="ring"></div>
                                            <div class="ring2"></div>
                                            <p class="info">Aku suka!</p>
                                        </div> -->
                                    </td>
                                    <td>{{inc @index}}</td>
                                    <td>{{adt ../users @index 'name'}}</td>
                                    <td>{{peserta.[subtopik]}}</td>
                                    <td><a href="{{peserta.[file_proposal]}}">Download</a></td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/favorite.js"></script>