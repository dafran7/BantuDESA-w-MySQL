<link rel="stylesheet" href="/assets/css/favorite.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css"/>
 
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

<div class="content" alt="" data-aos="fade-right" data-aos-duration="1800">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card striped-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Daftar Peserta Sayembara</h4>
                        <p class="card-category">Berikut adalah daftar peserta yang mengikuti sayembara :</p>
                    </div>
                    <div class="card-body table-full-width table-responsive" style="margin-left: 0.5%">
                        {{#ifCond message '==' 'notfound'}}
                            <p>Belum ada Peserta yang mengikuti Sayembara Anda.</p>
                        {{/ifCond}}
                        {{#if pesertas}}
                        <table id="example" class="hover">
                            <thead>
                                <th>Favorite</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Subtopik</th>
                                <th>File Proposal</th>
                            </thead>
                            <tbody>
                            {{#each pesertas as |peserta|}}
                                <tr>
                                    <td>
                                        <!-- kalo  blom dipencet -->
                                        <div class="click">
                                            <div class="star-{{inc @index}}">
                                                <span class="fa fa-star-o"></span>
                                                <div class="ring"></div>
                                                <div class="ring2"></div>
                                                <p class="info">Aku suka!</p>
                                            </div>
                                        </div>

                                        <!-- kalo udah dipencet -->
                                        <!-- <div class="click active active-2 active-3 active-4">
                                            <span class="fa fa-star"></span>
                                            <div class="ring"></div>
                                            <div class="ring2"></div>
                                            <p class="info">Aku suka!</p>
                                        </div> -->
                                    </td>
                                    <td>{{@index}}</td>
                                    <td>{{adt ../pesertas @index 'name'}}</td>
                                    <td>{{peserta.[subtopik]}}</td>
                                    <td><a href="../uploads/file/{{peserta.[file_proposal]}}">Download</a></td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/favorite.js"></script>
<script type="text/javascript">
    $('#example').DataTable({
        "order": [[ 1, "asc" ]]
    });
</script>