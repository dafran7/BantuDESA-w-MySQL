<div class="content" alt="" data-aos="fade-right" data-aos-duration="1800">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Daftar Sayembara</h4>
                        <p class="card-category">Berikut adalah daftar sayembara yang diadakan oleh Anda :</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        {{#ifCond message '==' 'notfound'}}
                            <p>Belum ada acara Sayembara yang Anda buat.</p>
                        {{/ifCond}}
                        {{#if sayembaras}}
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>No</th>
                                <th>Judul</th>
                                <th>Topik</th>
                                <th>Deskripsi Singkat</th>
                                <th>Isian</th>
                                <th>Operasi</th>
                            </thead>
                            <tbody>
                            {{#each sayembaras as |sayembara|}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{sayembara.[judul_sayembara]}}</td>
                                    <td>{{sayembara.[topik]}}</td>
                                    <td>{{substr sayembara.[deskripsi_singkat] 50}}</td>
                                    <td>{{substr sayembara.[isi_sayembara] 70}}</td>
                                    <td>
                                        <a href="/dashboard/sayembara/{{sayembara.[id_sayembara]}}/edit" style="padding-right: 10px">Edit</a>

                                        <a href="javascript:;" id="delete-{{sayembara.[id_sayembara]}}">Delete</a>
                                    </td>
                                </tr>

                                <script>
                                    $('#delete-{{sayembara.[id_sayembara]}}').on("click",function(){
                                        console.log("Bisa");
                                    $.ajax({
                                        type: "POST",
                                        url: "/dashboard/sayembara/{{sayembara.[id_sayembara]}}/delete",
                                        complete: function() {
                                            $(location).attr("href", "/dashboard/listSayembara");
                                            //alert('update success'); 
                                        }
                                    }).done(function(res){
                                        console.log(res);
                                        //"Updated data successfully\n";
                                        //IF ALL IS OK!!
                                        });
                                    });
                                </script>
                            {{/each}}
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>